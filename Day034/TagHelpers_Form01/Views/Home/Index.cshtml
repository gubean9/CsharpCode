@model TagHelpers_Form01.Models.Student

@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container">
	<div class="col-sm-4">
		<form>
			<label asp-for="Name">이름 : </label>
			<input asp-for="Name"
				placeholder="이름을 입력하세요"
				class="form-control" />
			<br />

			<lable asp-for="Gender">성별 : </lable>
			<select asp-for="Gender"
				class="form-control"
				asp-items="Html.GetEnumSelectList<Gender>()">
				<option value="">성별을 입력해 주세요.</option>
			</select>
			<br />

			<label asp-for="Age">나이 : </label>
			<input asp-for"Age"
				placeholder="나이를 입력하세요"
				class="form-control" />
			<br />

			<label asp-for="HP">전화번호 : </label>
			<input asp-for="HP"
				placeholder="전화번호를 입력하세요"
				class="form-control" />
			<br />

			<lable>취업여부</lable>
			<div class="form-check">
				<input class="form-check-input" type="radio" asp-for="IsEmployed" value="취업중">
				<label class="form-check-label" for="flexRadioDefault1">취업중</label>
				</div>

			<div class="form-check">
				<input class="form-check-input" type="radio" asp-for="IsEmployed" value="미취업" checked>
				<label class="form-check-label" for="flexRadioDefault2">미취업</label>
			</div>
			<br />

			@*cols="60" 가로 너비 조절*@
			<textarea asp-for="Description"
				rows="5"
				placeholder="학생 상세 정보가 있다면 적어주세요"
				class="form-control">
			</textarea>
			<br />

			<input type="submit" value="OK" class="btn btn-outline-primary" />
		</form>
	</div>
</div>